{
  "name": "persais",
  "version": "0.1.0",
  "description": "Self-Evolving Agentic Platform - User Project",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn src/main.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node -e \"require('dotenv').config(); require('persais-core/dist/scripts/db-migrate')\"",
    "db:rollback": "ts-node -e \"require('dotenv').config(); require('persais-core/dist/scripts/db-rollback')\"",
    "db:status": "ts-node -e \"require('dotenv').config(); require('persais-core/dist/scripts/db-status')\"",
    "db:reset": "ts-node -e \"require('dotenv').config(); require('persais-core/dist/scripts/db-reset')\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "persais-core": "*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "dotenv": "^16.3.0",
    "drizzle-orm": "^0.45.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0",
    "drizzle-kit": "^0.31.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
